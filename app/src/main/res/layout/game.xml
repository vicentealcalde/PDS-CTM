<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="10sp"
    android:layout_marginTop="30sp"
    android:layout_marginEnd="10sp"
    android:layout_marginBottom="30sp">

    <RelativeLayout

        android:id="@+id/expandaayout"
        android:layout_width="0dp"
        android:layout_height="738dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/round_corner"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="322dp"
            android:layout_height="303dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="104dp"
            android:layout_marginBottom="388dp"
            tools:srcCompat="@drawable/dice_dimen_3" />

        <Button
            android:id="@+id/RollButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="124dp"
            android:layout_marginBottom="146dp"
            android:drawableStart="@drawable/round_corner"
            android:text="Roll" />

        <Button
            android:id="@+id/PowerButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/RollButton"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="34dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="103dp"
            android:layout_marginBottom="145dp"
            android:layout_toStartOf="@+id/RollButton"
            android:drawableStart="@drawable/round_corner"
            android:text="Powers" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/resultListView"
            android:layout_width="192dp"
            android:layout_height="325dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10sp"
            android:layout_marginTop="30sp"
            android:layout_marginEnd="23dp"

            android:layout_marginBottom="361dp"
            android:layout_toStartOf="@+id/imageView"
            android:scrollbars="vertical"
            app:layout_constraintLeft_toLeftOf="300dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textTotal"
            android:layout_width="70sp"
            android:layout_height="30sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="331dp"
            android:text="JUGAR"

            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="200sp"
            android:layout_height="2sp"
            android:layout_alignStart="@+id/textTotal"
            android:layout_alignEnd="@+id/textTotal"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="91dp"
            android:layout_marginEnd="-222dp"
            android:layout_marginBottom="719dp"
            android:background="#000000" />

        <View
            android:layout_width="200sp"
            android:layout_height="2sp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="720dp"
            android:layout_toStartOf="@+id/textTotal"
            android:background="#000000" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>